    "recetas": {
        "pan_integral": {
            "nombre": "Pan Integral Rápido (Sin Levadura)",
            "ingredientes": [
                "2 tazas de harina integral",
                "1 cucharadita de bicarbonato de sodio",
                "1/2 cucharadita de sal",
                "1 taza de agua tibia",
                "2 cucharadas de aceite de oliva",
                "1 cucharada de miel (opcional, para darle un toque de dulzor)"
            ],
            "instrucciones": [
                "Precalienta el horno a 180°C.",
                "Mezcla la harina integral, el bicarbonato de sodio y la sal en un bowl grande.",
                "Agrega el agua tibia, el aceite de oliva y la miel (si decides usarla). Remueve con una cuchara hasta integrar todos los ingredientes.",
                "Forma la masa con las manos hasta que esté suave y uniforme. No es necesario amasar mucho.",
                "Coloca la masa en un molde para pan ligeramente engrasado o forma un pan redondo y colócalo en una bandeja para horno.",
                "Haz un corte en forma de cruz en la parte superior del pan para que se cocine de manera uniforme.",
                "Hornea durante 30-35 minutos o hasta que el pan esté dorado y suene hueco al golpear la base.",
                "Deja enfriar antes de cortar."
            ],
            "imagen": "pan_integral_rapido.webp"
        },
        "tortilla_integral": {
            "nombre": "Tortilla Integral",
            "ingredientes": [
                "1 1/2 tazas de harina integral",
                "1/2 cucharadita de sal",
                "1/4 cucharadita de bicarbonato de sodio",
                "3/4 de taza de agua caliente"
            ],
            "instrucciones": [
                "En un bowl, mezcla la harina, la sal y el bicarbonato.",
                "Agrega la agua caliente poco a poco hasta formar una masa suave.",
                "Divide la masa en bolitas y estira cada una en forma de tortilla.",
                "Cocina en un sartén caliente por 1-2 minutos de cada lado."
            ],
            "imagen": "tortilla-integral-atun.webp"
        },
        "chia_pudding": {
            "nombre": "Chia Pudding",
            "ingredientes": [
                "1/2 taza de semillas de chía",
                "2 tazas de leche (regular o vegetal)",
                "1-2 cucharadas de miel o sirope (opcional)",
                "Frutas frescas y nueces (opcional)"
            ],
            "instrucciones": [
                "Mezcla las semillas de chía, la leche y la miel en un tazón o frasco.",
                "Cubre y refrigera por al menos 2 horas o toda la noche.",
                "Revuelve y añade frutas y nueces al gusto."
            ],
            "imagen": ""
        }
    }
